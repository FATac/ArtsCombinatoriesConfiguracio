{
	"startBlock":"bInici",
	
	"blocks":
	[

         {
            "name":"bInici",
            "data":
            [
                 {"name":"Triar_el_color_directament", "type":"string", "values":["(fer el proces legal)","verd","groc","taronja","vermell"]}
            ],

            "rules":
            [
                {"exp":"Triar_el_color_directament='verd'", "result":{"color":"green"}},
                {"exp":"Triar_el_color_directament='groc'", "result":{"color":"yellow"}},
                {"exp":"Triar_el_color_directament='taronja'", "result":{"color":"orange"}},
                {"exp":"Triar_el_color_directament='vermell'", "result":{"color":"red"}},
                {"exp":"true", "result":{"block":"bSeleccionarTipusObjecte"}}
            ]
        },
        
        {
        	"name":"bSeleccionarTipusObjecte",
        	"reference":"Referencia_objecte",
        	"data":
        	[
        		{"name":"Referencia_objecte", "type":"string"},
        		{"name":"Selecciona_el_tipus_objecte", "type":"string", "values":["Obra","Document"]}
        	],
        	
        	"rules":
        	[
        		{"exp":"Selecciona_el_tipus_objecte='Obra'", "result":{"block":"bObra"}},
        		{"exp":"Selecciona_el_tipus_objecte='Document'", "result":{"block":"bDocument"}}
        	]	
        },
        
        {
        	"name":"bDocument",
        	"reference":"Referencia_objecte",        	
        	"data":
        	[
        		{"name":"Coneixem_autor", "type":"boolean"}
        	],
        	
        	"rules":
        	[
        		{"exp":"Coneixem_autor=true", "result":{"block":"bAutorDocument"}},
        		{"exp":"Coneixem_autor=false", "result":{"color":"red"}}
        	]
        },
        
        {
        	"name":"bAutorDocument",
        	"reference":"Referencia_objecte",        	
        	"data":
        	[
        		{"name":"Tipus_autor_de_document", "type":"string", "values":["Empleat de la FAT", "Contractat per la FAT", "Extern"]},
        		{"name":"Autoritzacio_per_publicar_document", "type":"boolean"}
        	],
        	
        	"rules":
        	[
        		{"exp":"Autoritzacio_per_publicar_document=true || Tipus_autor_de_document='Empleat de la FAT'", "result":{"block":"bContingut"}},
        		{"exp":"Autoritzacio_per_publicar_document=false", "result":{"color":"red"}}
        	]
        },
        
        {
        	"name":"bObra",
        	"reference":"Referencia_objecte",        	
        	"data":
        	[
        		{"name":"Coneixem_autor", "type":"boolean"}
        	],
        	
        	"rules":
        	[
        		{"exp":"Coneixem_autor=true", "result":{"block":"bAutorConegut"}},
        		{"exp":"Coneixem_autor=false", "result":{"block":"bAutorDesconegut"}}
        	]
        },
        
        {
        	"name":"bAutorConegut",
        	"reference":"Referencia_objecte",        	
        	"data":
        	[
        		{"name":"Llicencia", "type":"string", "values":["Copyright","CreativeCommons by", "CreativeCommons by nc", "CreativeCommons by nc sa", "CreativeCommons by nc nd", "CreativeCommons by sa", "CreativeCommons by nd", "Colorluris", "Llicencia Aire Incondicional", "Llicencia Arte Libre", "Berkeley Database License", "Academic Free License", "MIT License", "University of Illinois", "W3C Software Nnotice and License", "Zope Public License", "Phyton License", "PHP License", "Q Public License", "Common Public License", "Affero License", "altres"]}
        	],
        	
        	"rules":
        	[
				{"exp":"Llicencia='Copyright'", "result":{"block":"bCopyright"}},
				{"exp":"true", "result":{"block":"bContingut"}}
        	]
        },
        
        {
        	"name":"bAutorDesconegut",
        	"reference":"Referencia_objecte",        	
        	"data":
        	[
        		{"name":"Descripcio_Origen", "type":"string"},
        		{"name":"Risc", "type":"string", "values":["Inexistent", "Baix","Mig","Alt"]},
        		{"name":"Comentaris_obra_orfe", "type":"string"}
        	],
        	
        	"rules":
        	[
				{"exp":"Risc='Alt'", "result":{"color":"red"}},
				{"exp":"Risc='Mig'", "result":{"color":"orange"}},
				{"exp":"true", "result":{"block":"bContingut"}}
        	]
        },
        
        {
        	"name":"bCopyright",
        	"reference":"Referencia_objecte",        	
        	"data":
        	[
        		{"name":"Publicacio", "type":"boolean"},
        		{"name":"Reproduccio", "type":"boolean"},
        		{"name":"Transformacio", "type":"boolean"},
        		{"name":"Distribucio", "type":"boolean"}
        	],
        	
        	"rules":
        	[
        		{"exp":"Publicacio=false", "result":{"color":"red"}},
        		{"exp":"true", "result":{"block":"bContingut"}}
        	]
        },
        
        {
        	"name":"bContingut",
        	"reference":"Referencia_objecte",        	
        	"data":
        	[
        		{"name":"Conte_informacio_personal", "type":"boolean"},
				{"name":"Conte_informacio_confidencial", "type":"boolean"},
        		{"name":"Conte_persones", "type":"boolean"},
				{"name":"Conte_marques", "type":"boolean"},
				{"name":"Conte_altres_obres_o_documents", "type":"boolean"}
        	],
        	
        	"rules":
        	[
        		{"exp":"Conte_informacio_personal=true || Conte_informacio_confidencial=true", "result":{"color":"red"}},
        		{"exp":"Conte_persones=true", "result":{"block":"bPersones"}},
        		{"exp":"Conte_marques=true", "result":{"block":"bMarques"}},
        		{"exp":"Conte_altres_obres_o_documents=true", "result":{"block":"bContingutAltres"}}
        	]
        },
        
        {
        	"name":"bPersones",
        	"reference":"Referencia_objecte",        	
        	"data":
        	[
        		{"name":"Situacio_persona", "type":"string", "values":["reconeixible", "no reconeixible", "persona pública"]}
        	],
        	
        	"rules":
        	[
        		{"exp":"Situacio_persona='reconeixible'", "result":{"block":"bPersonaReconeixible"}},
        		{"exp":"Situacio_persona='no reconeixible' && Conte_marques=false && Conte_altres_obres_o_documents=false", "result":{"color":"green"}},
        		{"exp":"Situacio_persona='persona pública' && Conte_marques=false && Conte_altres_obres_o_documents=false", "result":{"color":"green"}},
        		{"exp":"Conte_marques=true", "result":{"block":"bMarques"}},
        		{"exp":"Conte_altres_obres_o_documents=true", "result":{"block":"bContingutAltres"}}
        	]
        },
        
        {
        	"name":"bPersonaReconeixible",
        	"reference":"Referencia_objecte",        	
        	"data":
        	[
        		{"name":"Impacta_honor_o_intimitat", "type":"boolean"},
        		{"name":"Persona_en_lloc_public", "type":"boolean"},
        		{"name":"La_persona_ha_autoritzat_la_publicacio", "type":"boolean"},
        		{"name":"Referencia_autoritzacio_persona", "type":"string"}
        	],
        	
        	"rules":
        	[
        		{"exp":"Impacta_honor_o_intimitat=true", "result":{"color":"red"}},
        		{"exp":"La_persona_ha_autoritzat_la_publicacio=false && Persona_en_lloc_public=false && Conte_marques=false && Conte_altres_obres_o_documents=false", "result":{"color":"orange"}},
        		{"exp":"La_persona_ha_autoritzat_la_publicacio=true && Persona_en_lloc_public=false && Conte_marques=false && Conte_altres_obres_o_documents=false", "result":{"color":"green"}},
        		{"exp":"La_persona_ha_autoritzat_la_publicacio=false && Persona_en_lloc_public=true && Conte_marques=false && Conte_altres_obres_o_documents=false", "result":{"color":"green"}},
        		{"exp":"La_persona_ha_autoritzat_la_publicacio=true && Persona_en_lloc_public=true && Conte_marques=false && Conte_altres_obres_o_documents=false", "result":{"color":"green"}},
        		{"exp":"Conte_marques=true", "result":{"block":"bMarques"}},
        		{"exp":"Conte_altres_obres_o_documents=true", "result":{"block":"bContingutAltres"}}
        	]
        },
        
        {
        	"name":"bMarques",
        	"reference":"Referencia_objecte",        	
        	"data":
        	[
        		{"name":"Nom_de_la_marca", "type":"string"},
        		{"name":"Propietari_de_la_marca", "type":"string"},
        		{"name":"Autoritzacio_de_la_marca", "type":"boolean"},
        		{"name":"Referencia_autoritzacio_marca", "type":"string"},
        		{"name":"Risc_de_publicacio_de_la_marca", "type":"string", "values":["Inexistent","Baix","Mig","Alt"]}
        	],
        	
        	"rules":
        	[
        		{"exp":"Risc_de_publicacio_de_la_marca='Alt' && Autoritzacio_de_la_marca=false", "result":{"color":"red"}},
        		{"exp":"(Risc_de_publicacio_de_la_marca='Inexistent' || Autoritzacio_de_la_marca=true) && Conte_altres_obres_o_documents=false", "result":{"block":"bFinal"}},
        		{"exp":"(Risc_de_publicacio_de_la_marca='Baix' && Autoritzacio_de_la_marca=false) && Conte_altres_obres_o_documents=false", "result":{"color":"orange"}},
        		{"exp":"Risc_de_publicacio_de_la_marca='Mig' && Autoritzacio_de_la_marca=false && Conte_altres_obres_o_documents=false", "result":{"color":"orange"}},
        		{"exp":"Conte_altres_obres_o_documents=true", "result":{"block":"bContingutAltres"}}
        	]
        },
        
        {
        	"name":"bContingutAltres",
        	"reference":"Referencia_objecte",        	
        	"data":
        	[
        		{"name":"Te_permis", "type":"boolean"},
        	],
        	
        	"rules":
        	[
        		{"exp":"Te_permis=false", "result":{"block":"bContingutAltres2"}},
        		{"exp":"true", "result":{"block":"bFinal"}}
        		
        	]
        },
        
        {
        	"name":"bContingutAltres2",
        	"reference":"Referencia_objecte",        	
        	"data":
        	[
        		{"name":"Risc_obra_continguda", "type":"string", "values":["Inexistent","Baix","Mig","Alt"]},
        	],
        	
        	"rules":
        	[
        		{"exp":"true", "result":{"block":"bFinal"}}
        	]        
        },
       
        {
        	"name":"bFinal",
        	"data":
        	[
				
        	],
        	
        	"rules":
        	[
        		{"exp":"Conte_persones=true && Situacio_persona='reconeixible' && Persona_en_lloc_public=false && La_persona_ha_autoritzat_la_publicacio=false && Conte_altres_obres_o_documents=true && Te_permis=false && Risc_obra_continguda!='Baix' ", "result":{"color":"red"}},
        		{"exp":"Conte_persones=true && Situacio_persona='reconeixible' && Persona_en_lloc_public=false && La_persona_ha_autoritzat_la_publicacio=false && Conte_marques=true && Autoritzacio_de_la_marca=false && Risc_de_publicacio_de_la_marca='Mig' ", "result":{"color":"red"}},
        		{"exp":"Conte_altres_obres_o_documents=true && Te_permis=false && Risc_obra_continguda='Alt' && Conte_marques=true && Autoritzacio_de_la_marca=false && Risc_de_publicacio_de_la_marca='Mig' ", "result":{"color":"red"}},
        		
        		{"exp":"Conte_altres_obres_o_documents=true && Te_permis=false && Risc_obra_continguda='Alt'", "result":{"color":"orange"}},
        		{"exp":"Conte_altres_obres_o_documents=true && Te_permis=false && Risc_obra_continguda='Mig' && Conte_marques=true && Autoritzacio_de_la_marca=false && Risc_de_publicacio_de_la_marca='Mig' ", "result":{"color":"orange"}},
        		{"exp":"Conte_altres_obres_o_documents=true && Te_permis=false && Risc_obra_continguda='Mig' && Conte_persones=true && Situacio_persona='reconeixible' && Persona_en_lloc_public=false && La_persona_ha_autoritzat_la_publicacio=false ", "result":{"color":"orange"}},
        		{"exp":"Conte_marques=true && Autoritzacio_de_la_marca=false && Risc_de_publicacio_de_la_marca='Mig' && Conte_persones=true && Situacio_persona='reconeixible' && Persona_en_lloc_public=false && La_persona_ha_autoritzat_la_publicacio=false ", "result":{"color":"orange"}},
        		
        		{"exp":"Conte_altres_obres_o_documents=true && Te_permis=false && Risc_obra_continguda='Mig'", "result":{"color":"yellow"}},
        		{"exp":"Autoritzacio_de_la_marca=false && Risc_de_publicacio_de_la_marca='Mig'", "result":{"color":"yellow"}},
        		{"exp":"Conte_persones=true && Situacio_persona='reconeixible' && Persona_en_lloc_public=false && La_persona_ha_autoritzat_la_publicacio=false", "result":{"color":"yellow"}},
				
				{"exp":"true", "result":{"color":"green"}}
        	]        
        }
        
	]
}